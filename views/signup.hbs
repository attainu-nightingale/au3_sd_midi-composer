<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="https://res.cloudinary.com/degnified/image/upload/v1567584916/logo_qwvzmj.png">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/signup.css">
    <title>Musify | SignUp</title>


</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark">
        <a class="navbar-brand" id="brand" href="/">
            <strong class="brandName">MusiFy ***</strong>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav ml-auto navList">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/signup">SignUp</a>
                </li>
            </ul>
        </div>
    </nav>        

    <div class="container text-white">
        <form action="/signup" class="bg-dark" enctype="multipart/form-data" method="POST">
            <div class="container" id="signup-box">
                <div class="row mb-3">
                    <h1 class="mx-auto">Sign Up</h1>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12 pl-5">
                        <div class="login-box">
                            <div class="textbox">
                                <label>First Name</label>
                                <i class="fas fa-user"></i>
                                <input type="text" placeholder="firstname" name="firstname" required />
                            </div>
                            <div class="textbox">
                                <label>Last Name</label>
                                <i class="far fa-address-card"></i>
                                <input type="text" placeholder="lastname" name="lastname" required />
                            </div>
                            <div class="textbox">
                                <label>Upload Profile Avatar</label>
                                <i class="far fa-address-card"></i>
                                <input type="file" placeholder="Upload Profile Avatar" name="image" />
                            </div>
                            <div class="textbox pt-2">
                                <label>Gender</label>
                                <i class="fas fa-venus-mars"></i>
                                <select id="gender" class="form-control-sm" name="gender" required>
                                    <option>Male</option>
                                    <option>Female</option>
                                </select>
                            </div>
                            <div class="textbox">
                                <label>Email</label>
                                <i class="fas fa-envelope-open-text"></i>
                                <input type="email" placeholder="Email" name="email" required />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12 pl-5">
                        <div class=" login-box">
                            <div class="textbox">
                                <label>Username</label>
                                <i class="fas fa-at"></i>
                                <input type="text" placeholder="Username" name="username" required />
                            </div>
                            {{#if error}}
                                <p style="color:red;font-size:12px"><span class="bg-white">{{error}}</span></p>
                            {{/if}}
                            <div class="textbox">
                                <label>Password</label>
                                <i class="fas fa-lock"></i>
                                <input id="password" type="password" placeholder="Password" name="password" required />
                            </div>
                            <div class="textbox">
                                <label>Confirm Password</label>
                                <i class="fas fa-key"></i>
                                <input id="confirmPassword" type="password"
                                    placeholder="confirm password" name="confirm-password" required />
                                <div id="alertTool"></div>
                            </div>

                            <button type="submit" class="sub-btn btn btn-outline-success mb-2" disabled>Register</button>
                            <small class="text-info"><br/>By clicking the 'Register' button, you confirm that you accept
                                our Terms of use and Privacy Policy.</small>
                            <p>Already have an account? <a href="/login" class="ml-3 btn btn-success my-1 btn-rounded waves-effect z-depth-0">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <br/>
    <br/>
    <br/>
    <footer class="container-fluid fixed-bottom">
        <div class="container-fluid bg-dark text-white">
            <div class="row">
                <p class="text-center mx-auto">Copyright <span style="font-size:24px">&copy</span> by Musify | All rights reserved</p>
            </div>
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/js/signup.js"></script>

</body>

</html>

