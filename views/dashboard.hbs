<div class="container-fluid ml-0">
    <div class="row">
        <div class="col-md-12 col-lg-3 col-sm-12 bg-dark h-100" style="position: fixed;">
            <div class="card rounded">
                <div class='music-card'>
                    <img id="playerAlbumArt" class='rounded-top image'
                        src="https://res.cloudinary.com/indysigner/image/fetch/f_auto,q_auto/w_1600/https://cloud.netlifyusercontent.com/assets/344dbf88-fdf9-42bb-adb4-46f01eedd629/1e8852ae-f094-4c8f-a2ef-71fe2e705d6d/web-midi-api-image1.jpg"></img>
                    <div class='info'>
                        <h2 class='title text-center'></h2>
                        <div class='artist text-center'></div>
                    </div>
                    <div id="player" class="rounded-bottom">
                        <audio class="" src="" autoplay loop controls>
                        </audio>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="leftPane" class="col-sm-12 col-lg-9 col-md-12 mt-3 mb-5">
        <a href="/dashboard/explore" class="btn btn-outline-success btn-sm px-5 py-2  mb-3">Explore > </a>
        <div class="card-columns">
            {{#each data}}
            <div class="card" id="songCard">
                <img id="albumArt" class="card-img" src="{{this .albumArt}}" alt="Album Art">
                <div class="card-img-overlay p-0 d-flex flex-column">
                    <h5 class=" bg-secondary card-title text-warning mt-auto mb-0 px-3 pl-4 py-2">
                        {{this.title}}
                    </h5>
                    <h6 class=" bg-secondary card-subtitle text-warning mb-0 px-3 py-2 pl-4"> {{this.author}} </h6>
                    <div class="link d-flex bg-secondary rounded-bottom  mb-0 pb-3 pt-1 pl-2">
                        <a value="{{this.url}}" onclick="playThis(event)"
                            class="card-link bg-secondary px-3 py-1 rounded text-warning">Play</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>